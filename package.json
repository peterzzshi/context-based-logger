{
  "name": "context-based-logger",
  "version": "1.0.0",
  "type": "module",
  "description": "A lightweight, context-aware logging library for TypeScript with async context management",
  "main": "dist/logger/logger.js",
  "types": "dist/logger/logger.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "dev": "tsx src/demo.ts",
    "demo": "npm run build && node dist/demo.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "logger",
    "typescript",
    "context",
    "async-local-storage",
    "structured-logging"
  ],
  "author": "Peter Shi",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^25.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.0.0",
    "jiti": "^2.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  }
}
